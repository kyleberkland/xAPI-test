{{! make the _globals object in course.json available to this template}}
{{import_globals}}

{{themeConfig}}

<div class="block-inner">

	<div class="block-header">
		<div class="block-header-inner">

			{{#if displayTitle}}
			<div class="block-title {{#if _theme._headings._isEnabled}}{{{_theme._headings._blockHeading}}}{{/if}}">
				<div class="block-title-inner h3" aria-level="3" role="heading" tabindex="0">
					{{#if _theme._headings._isEnabled}}{{#if_value_equals _theme._headings._blockHeading "magazine"}}<span><span>{{/if_value_equals}}{{/if}}
					{{{compile displayTitle this}}}
					{{#if _theme._headings._isEnabled}}{{#if_value_equals _theme._headings._blockHeading "magazine"}}</span></span>{{/if_value_equals}}{{/if}}
				</div>
			</div>
			{{/if}}

			{{#if body}}
			<div class="block-body">
				<div class="block-body-inner">
					{{{compile_a11y_text body this}}}
				</div>
			</div>
			{{/if}}

			{{#if instruction}}
			<div class="block-instruction">
				<div class="block-instruction-inner">
					{{{compile_a11y_text instruction this}}}
				</div>
			</div>
			{{/if}}

		</div>
	</div>

	<div class="component-container"></div>

</div>
