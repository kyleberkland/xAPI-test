{{! make the _globals object in course.json available to this template}}
{{import_globals}}

{{themeConfig}}

<div class="article-inner block-container">

	<div class="article-header">
		<div class="article-header-inner">

			{{#if displayTitle}}
			<div class="article-title {{#if _theme._headings._isEnabled}}{{{_theme._headings._articleHeading}}}{{/if}}">
				<div class="article-title-inner h2" aria-level="2" role="heading" tabindex="0">
					{{#if _theme._headings._isEnabled}}{{#if_value_equals _theme._headings._articleHeading "magazine"}}<span><span>{{/if_value_equals}}{{/if}}
					{{{compile displayTitle this}}}
					{{#if _theme._headings._isEnabled}}{{#if_value_equals _theme._headings._articleHeading "magazine"}}</span></span>{{/if_value_equals}}{{/if}}
				</div>
			</div>
			{{/if}}

			{{#if body}}
			<div class="article-body">
				<div class="article-body-inner">
					{{{compile_a11y_text body this}}}
				</div>
			</div>
			{{/if}}

			{{#if instruction}}
			<div class="article-instruction">
				<div class="article-instruction-inner">
					{{{compile_a11y_text instruction this}}}
				</div>
			</div>
			{{/if}}

		</div>
	</div>

</div>
