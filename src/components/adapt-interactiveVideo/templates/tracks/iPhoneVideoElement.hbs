<video preload="none"  poster="{{_media.poster}}" width="960" height="540" style="width:100%; height:100%;" controls="none" {{#if loop}}loop="loop"{{/if}}>

  <source src="{{_media.mp4}}.low.mp4" audio="{{_media.mp4}}.mp3" type="video/mp4"/>
  
  {{#if _useClosedCaptions}}
      {{#each _media.cc}}
          <track kind="subtitles" src="{{src}}" type="text/vtt" srclang="{{srclang}}" />
      {{/each}}
  {{/if}}
</video>
